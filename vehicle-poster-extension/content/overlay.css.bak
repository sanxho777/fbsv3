:host, .vp-root { all: initial; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial; }
.vp-pill {
  position: fixed; right: 18px; bottom: 18px; z-index: 2147483647;
  padding: 10px 14px; border-radius: 999px; background:#111; color:#fff;
  font-weight:600; box-shadow: 0 8px 20px rgba(0,0,0,.25); cursor:pointer; user-select:none;
}
.vp-panel {
  position: fixed; right: 18px; bottom: 70px; width: 380px; max-height: 70vh; overflow:auto;
  background:#fff; color:#111; border-radius: 16px; box-shadow: 0 20px 50px rgba(0,0,0,.25);
  z-index: 2147483646; padding: 14px; display: none;
}
.vp-panel.open { display:block; }
.vp-row { display:flex; justify-content:space-between; gap:12px; padding:6px 0; border-bottom:1px solid #eee; }
.vp-row b { color:#444; }
.vp-actions { display:flex; gap:8px; margin-top:10px; }
.vp-btn {
  flex:1; padding:10px 12px; border-radius:10px; border:1px solid #e5e7eb; cursor:pointer; background:#111; color:#fff; font-weight:600;
}
.vp-btn.secondary { background:#fff; color:#111; }
.vp-small { font-size:12px; color:#666; margin-top:4px; }
